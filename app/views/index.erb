<ul>

<% @recipes.each do |recipe| %>
<li>
<h1><a href="/recipes/<%= recipe.id %>"> <%= recipe.name %> </a> </h1>
<h2>Ingredients:</h2>
<% list = recipe.ingredients.split(', ') %>
<ul>
<% list.each do |ing| %>

  <li> <%= ing %> </li>

<% end %>
</ul>
<h2>Cook Time: <%= recipe.cook_time %> </h2>
</li>

<% end %>

</ul>
