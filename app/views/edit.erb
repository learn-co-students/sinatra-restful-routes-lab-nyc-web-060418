<form method="post" action= '/recipes/<%= @recipe.id %>'>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h1>Edit This Recipe</h1>
  <label for="recipe_name">Recipe Name</label>
  <input type="text" name="name" id="recipe_name"><br>
  <label for="recipe_ingredients">Recipe Ingredients</label>
  <input type="text" name="ingredients" id="recipe_ingredients" value="<%= @recipe.ingredients %>"><br>
  <label for="recipe_cook_time">Recipe Cook Time</label>
  <input type="text" name="cook_time" id="recipe_cook_time"><br>
  <br>
  <input type="submit" value="Edit Recipe" id="submit">

</form>
