<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2>Edit a recipe</h2>

  <label for="name">Name:</label>
  <br>
  <input type="text" name="name" id="name" value="<%= @recipe.name %>">
  <br>
  <label for="ingredients">Ingredients:</label>
  <br>
  <textarea type="text" rows="2" cols="50" name="ingredients" id="ingredients"><%= @recipe.ingredients %></textarea>
  <br>
  <label for="cook_time">Cook Time:</label>
  <br>
  <input type="text" name="cook_time" id="cook_time" value="<%= @recipe.cook_time %>">
  <br>

  <input type="submit" value="Edit!" id="submit">

</form>
